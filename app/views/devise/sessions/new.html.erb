<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center my-4">Sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            <%= f.object.errors.full_messages_for(:email).first %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
          <div class="invalid-feedback">
            <%= f.object.errors.full_messages_for(:password).first %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="d-grid mb-2">
          <%= f.submit 'Sign in', class: 'btn btn-primary' %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
